<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd ">
<struts>
	
	
	<package name="default" extends="struts-default">
	
		<default-interceptor-ref name="defaultStack" />
		
		<action name="customerAction_*" class="com.c4networks.vrms.ui.action.CustomerAction" method="{1}">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="store">
      			<param name="operationMode">STORE</param>
      			<param name="operationMode">RETRIEVE</param>
   			</interceptor-ref>
			<result name="success">/CustomerList.jsp</result>
			<result name="input">/AddCustomer.jsp</result>
			<result name="addcustomer" type="redirect">customerAction_viewCustomerList.action</result>
			<result name="definecustomer">/AddCustomer.jsp</result>
			<result name="history">/ViewHistory.jsp</result>
		</action>
		
		<action name="categoriesAction_viewCategories" class="com.c4networks.vrms.ui.action.CategoriesAction">
			<result name="success">/CategoriesList.jsp</result>
		</action>
		
		<action name="moviesAction_*" class="com.c4networks.vrms.ui.action.MoviesAction" method="{1}">
			<result name="success">/MoviesList.jsp</result>
			<result name="input">/index.jsp</result>
			<result name="addmovie" type="redirect">moviesAction_viewMoviesList.action</result>
			<result name="definemovie">/AddMovie.jsp</result>
		</action>

		<action name="rentalAction_*" class="com.c4networks.vrms.ui.action.RentalAction" method="{1}">
			<result name="success">/RentalsList.jsp</result>
			<result name="input">/index.jsp</result>
			<result name="definerental">/RentalDefine.jsp</result>
			<result name="defineclose">/RentalClose.jsp</result>
			<result name="rentalchildpage">/RentalCloseCustDetails.jsp</result>
			<result name="addrental" type="redirect">rentalAction_viewActiveRentals.action</result>
			<result name="rentalfinalize">/RentalFinalize.jsp</result>
		</action>
		
	</package>
</struts>
